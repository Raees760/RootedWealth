<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Compact View -->
        <View
            android:id="@+id/viewIncomeColor"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/budget_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvIncomeSource"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewIncomeColor"
            app:layout_constraintEnd_toStartOf="@id/tvIncomeAmount"
            tools:text="Salary" />

        <TextView
            android:id="@+id/tvIncomeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvIncomeSource"
            app:layout_constraintStart_toEndOf="@id/viewIncomeColor"
            tools:text="01 Oct 2025" />

        <TextView
            android:id="@+id/tvIncomeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/budget_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="+ R 25000.00" />

        <!-- Expanded Details View -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupIncomeExpandedDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvIncomeFullNotes, btnIncomeEdit, btnIncomeDelete" />

        <TextView
            android:id="@+id/tvIncomeFullNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvIncomeDate"
            app:layout_constraintStart_toStartOf="@id/tvIncomeDate"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Full notes about the income go here." />

        <Button
            android:id="@+id/btnIncomeEdit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintEnd_toStartOf="@id/btnIncomeDelete"
            app:layout_constraintTop_toBottomOf="@id/tvIncomeFullNotes" />

        <Button
            android:id="@+id/btnIncomeDelete"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIncomeFullNotes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>