<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:tag="themed_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialHeader"
            android:tag="themed_text"
            android:text="How to Earn Coins" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialBody"
            android:tag="themed_text"
            android:text="• Link Bank Account: Required to participate in challenges and achievements to ensure fair play.\n• Complete Weekly Challenges: e.g., 'Stay under R500 on Takeout'.\n• Stay Under Budget: Finish the month under your total budget for a big coin bonus.\n• Beat Your Past Self: Spend less in a category this month than you did last month." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialHeader"
            android:tag="themed_text"
            android:text="Streaks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialBody"
            android:tag="themed_text"
            android:text="Log at least one expense every day to build your streak. Earn bonus coins at 3, 7, 14, and 30-day milestones!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialHeader"
            android:tag="themed_text"
            android:text="Achievements" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TutorialBody"
            android:tag="themed_text"
            android:text="• Getting Started (First expense)\n• Under Budget (1, 3, 6 months)\n• Diligent Logger (7/30 day streak)\n• Category Master (3 categories under budget in one month)\n• Home Meals Are Best (Spend &lt; R500 on takeaway for a week)\n• The Simple Life (Spend &lt; R1500 on luxuries for a week)" />
    </LinearLayout>
</ScrollView>